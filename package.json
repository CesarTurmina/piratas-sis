{
  "name": "piratas-sis",
  "productName": "piratas-sis",
  "version": "1.0.0",
  "main": "electron/main.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "electron electron/main.js",
    "clean": "if exist dist rmdir /s /q dist",
    "build": "vite build && tsc -p tsconfig.json",
    "dist": "npm run clean && npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.0.1",
    "electron": "^31.7.7",
    "electron-builder": "^25.1.8",
    "tsx": "^4.16.2",
    "typescript": "^5.9.2",
    "vite": "^5.4.10"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "build": {
    "appId": "com.piratas.sis",
    "productName": "Piratas SIS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**",
      "electron/**",
      "public/**",
      "package.json",
      "assets/**"
    ],
    "win": {
      "target": "portable",
      "icon": "public/logo.ico"
    }
  }
}
